%-------------------------------------------------------------------------------
% Needed to use \ifbool statement
\RequirePackage{etoolbox}
% Needed to use \if-\then-\else statement
\RequirePackage{xifthen}
% Needed to use \NewEnviron statement
\RequirePackage{environ}


%-------------------------------------------------------------------------------
%                Commands for conditional content
%-------------------------------------------------------------------------------
% Boolean value to display brief sections (and disable detailed sections)
\newbool{brevity}
\setbool{brevity}{false}

% Define a brief section (enabled when brevity is true)
\NewEnviron{briefSection}
  {\ifbool{brevity}{\BODY}{}}

% Define a detail section (enabled when brevity is false)  
\NewEnviron{detailSection}
  {\ifbool{brevity}{}{\BODY}}

% Define conditional inline string
% Usage: \brief{<brief string>}{<detail string>}
\newcommand*{\brief}[2]{\ifbool{brevity}{#1}{#2}}